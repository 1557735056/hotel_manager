<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.poppy.dao.FloorMapper">
    <insert id="addFloor">
        insert into t_floor(name,remark) values(#{name},#{remark})
    </insert>
    <update id="updateFloor">
        update t_floor
        <set>
            <if test="name != null  and name != ''">
                name = #{name};
            </if>
            <if test="remark != null  and remark != ''">
                remark = #{remark};
            </if>
        </set>
        where  id = #{id}
    </update>
    <delete id="deleteById">
        delete from t_floor where id =#{id}
    </delete>
    <select id="findFlowList" resultType="com.poppy.entity.Floor">
        select * from t_floor
        <where>
            <if test="name != null and name != ''">
               and  name like concat('%',#{name},'%')
            </if>
        </where>
    </select>
</mapper>